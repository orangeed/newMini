/* components/custom-navbar/custom-navbar.wxss */
.navbar {
  width: 100%;
  background: #ffffff;
  position: fixed;
  top: 0;
  z-index: 1000;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.navbar-content {
  height: 100%;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.back-btn {
  font-size: 48rpx;
  margin-right: 30rpx;
}

.title {
  font-size: 34rpx;
  font-weight: bold;
  background: linear-gradient(to bottom, #ffa500, #0000ff);
  -webkit-background-clip: text;
  color: transparent;
}
